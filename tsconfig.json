{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "es6",
    "lib": ["ES2019","dom"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist"]
}
